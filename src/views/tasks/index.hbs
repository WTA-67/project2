 <h1 >Library</h1>

  <h2>{{title}}</h2>
  <a href="/tasks"></a>
  <br /><br />

  <table class="table">
    <tr>
      <th>ID</th>
      <th>Book name</th>
      <th>Author Name</th>
      <th>Publication Date</th>
      <th>Rack Number</th>
    </tr>
    {{#each tasks}}
      <tr>
        <td class="py-3">{{this.Book_name}}</td>
        <td class="py-3">{{this.Author_Name}}</td>
        <td class="py-3">{{this.Publication_Date}}</td>
        <td class="py-3">{{this.Rack_Number}}</td>
         <td class="py-3"></td>
        <td>
            <a href="/products/edit-form/{{this.id}}" class="btn btn-info btn-sm">Edit</a>
            <a href="/products/delete/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
    {{/each}}
  </table>
</div>